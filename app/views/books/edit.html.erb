<h2>Edit Book</h2>

<%= simple_form_for @book do |form| %>
	<%= form.input :book_name, placeholder: 'Name' %>
	<%= form.input :book_author, placeholder: 'Author' %>
	<%= form.input :notes, placeholder: 'Notes' %>
	<%= form.association :shelves, as: :check_boxes, label_method: :shelf_name %>
	<%= form.button :submit %> 
<% end %>

<button><%= link_to "Go Back", book_path %></button>



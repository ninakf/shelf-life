<h2>New Book</h2>

<%= form_for @book do |form| %>
	<%= form.text_field :book_name, placeholder: 'Name' %><br>
	<%= form.text_field :book_author, placeholder: 'Author' %><br>
	<%= form.text_field :notes, placeholder: 'Notes' %><br>
	<%= collection_select(:book, :shelves, Shelf.all, :id, :shelf_name, {}) %>
	<%= form.submit %> 
<% end %>
<button><%= link_to "Go Back", root_path %></button>